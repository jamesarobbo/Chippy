

	$(document).on("change", "#checkout-quantity", function(){

		    quantity = this.value;

			name = $(this).closest("td").prev().html();

			size = $(this).closest("td").next().html();

			$.ajax({
				
				url: "/orders/new/basket_update",
				data: {quantity: quantity, name: name, size: size},
				dataType: "script"
		
			});

	});
	





